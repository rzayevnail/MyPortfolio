@model List<Message>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Mesaj Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Mesajlarla Ilgili islemleri Asagidaki Panelden Yapa bilirsiniz...
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Gonderen</th>
                                    <th scope="col">Konu</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Mesaji Ac</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MessageID</td>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Subject</td>
                                        <td>@item.SendDate</td>
                                        <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-outline-warning">Mesaji Ac</a></td>
                                        @if (item.IsRead == true)
                                        {
                                            <td><a href="/Message/ChangeIsReadToFalse/@item.MessageID" class="btn btn-outline-dark">Okunmadi</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Message/ChangeIsReadToTrue/@item.MessageID" class="btn btn-outline-info">Okundu</a></td>
                                        }
                                        <td><a href="/Message/DeleteMessage/@item.MessageID" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Experience/CreateExperience/" class="btn btn-outline-info">Yeni Deneyim Girisi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


