@model List<ToDoList>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Ypilacaklar ilgili islemleri Asagidaki Panelden gerceklesdire bilirsiniz...
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Icerik</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Guncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ToDoListint</td>
                                        <td>@item.Title</td>
                                        <td>@item.Date</td>
                                        @if (item.Status == true)
                                        {
                                            <td><a href="/ToDoList/ChangeToDoListStatusToFalse/@item.ToDoListint" class="btn btn-outline-dark">Yapilmadi</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/ToDoList/ChangeToDoListStatusToTrue/@item.ToDoListint" class="btn btn-outline-info">Yapildi</a></td>
                                        }
                                        <td><a href="/ToDoList/DeleteToDoList/@item.ToDoListint" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/ToDoList/UpdateToDoList/@item.ToDoListint" class="btn btn-outline-success">Guncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/ToDoList/CreateToDoList/" class="btn btn-outline-info">Yeni Yapilacak Islem Girisi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



